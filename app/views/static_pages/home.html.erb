<% provide(:page_title, "Home") %>

<!-- <h2 class="page-title">Home</h2> -->

	<div class = "search-box-container">
		<form id='add_profile'>
			<input id="user_name" class="search-box" type="text" placeholder="Enter Gitgub username..." autofocus>
 			<input id="search-button" type="submit" value="Search"> 
	    </form>		
	</div>

	<div class='profile-container'>
    </div>

    <template id='profile-template'>
      	<div class="aaaa">
        	<div class="git-profile-avatar">
          		<img src="{{ avatar_url }}">
        	</div>

        	<div class="git-profile-info">
        		<ul class="search-profile">
        			<li class="search-profile-data-header"><a href="{{ html_url }}"> {{ login }} </a></li>
        			<li class="search-profile-data">Email: {{ email }} </li>
	    			<li class="search-profile-data"><a href="{{ html_url }}"> {{ html_url }} </a> </li>
	    			<li class="search-profile-data">Joined on: {{ created_at }} </li>
        			<li class="search-profile-data">Following: {{ following }}</li>
        			<li class="search-profile-data">Followers: {{ followers }}</li>
        			<li class="search-profile-data">Public Repos: {{ public_repos }}</li> 
        		</ul>
        		<input id="save-profile" type="submit" value="Save profile">
        	</div>

        <a clear="all"></a>
      	</div>
    </template>

    <p id="error_message"></p>
