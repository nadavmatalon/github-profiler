<% provide(:page_title, "Home") %>

<!-- <h2 class="page-title">Home</h2> -->

	<div class = "search-box-container">
		<form id='add_profile'>
			<input id="user_name" class="search-box" type="text" placeholder="Enter Gitgub username..." autofocus>
 			<input id="search-button" type="submit" value="Search"> 
	    </form>		
	</div>

	<div class='profile-container'>
    </div>

    <template id='profile-template'>
      	<div class="aaaa">
        	<div class="git-profile-avatar">
          		<img src="{{ avatar_url }}">
        	</div>

        	<div class="git-profile-info">
        		<ul class="a">
        			<li class="b"><a href="{{ html_url }}"> {{ login }} </a></li>
        			<li class="b"> {{ email }} </a></li>
	    			<li class="b"><a href="{{ html_url }}"> {{ html_url }} </a></li>
	    			<li class="b"><a href="{{ html_url }}"> Joined on: {{ created_at  | created_at:'d-MM-yyyy' }} </a></li>
        			<li class="b">Following: {{ following }}</li>
        			<li class="b">Followers: {{ followers }}</li>
        			<li class="b">Public Repos: {{ public_repos }} </li>
        		</ul>
        	</div>
        
        <br clear="all">
      	</div>
    </template>

    <p id="error_message"></p>
